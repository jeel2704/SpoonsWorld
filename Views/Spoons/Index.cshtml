@model SpoonsWorld.Models.SpoonMaterialViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="spoons" asp-action="Index" method="get">
    <p>
        <select asp-for="SpoonMaterial" asp-items="Model.Meterial">
            <option value="">All</option>
        </select>
        Title: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Spoon[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Spoon[0].Material)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Spoon[0].Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Spoon[0].weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Spoon[0].NumberOfPieces)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Spoon[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Spoon[0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Spoon) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Material)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfPieces)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
